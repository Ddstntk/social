    {{ form_start(form, { method: 'post', action: url('messages_send') }) }}
    {{ form_widget(form) }}
    <input id = "chatInput" type="submit" value="{{ 'action.save'|trans }}" class="btn btn-primary btn-lg btn-block" onclick="submitForm()" />
    {{ form_end(form) }}
<script>
    function submitForm() {
        // Get the first form with the name
        // Hopefully there is only one, but there are more, select the correct index
        var frm = document.getElementsById('chatInput');
        frm.submit(); // Submit
        frm.reset();  // Reset
        return false; // Prevent page refresh
    }</script>