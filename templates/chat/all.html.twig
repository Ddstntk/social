{% extends 'base.html.twig' %}

{% block title %}
    Chats
{% endblock %}

{% block body %}

    <h1>
       Chats
    </h1>
    {% if chats is defined and chats|length %}
        <ul>
        {% for row in chats %}
            <li><button class="btn btn-outline-dark mb-2" onclick="changeIframes({{ row[0].FK_idConversations }})">
            {% for items in row %}
                {{ items.name }} {{ items.surname }},
            {% endfor %}
                </button>
            </li>
        {% endfor %}
        </ul>
    {% else %}
        <div>
            List is empty!
        </div>
    {% endif %}
{% endblock %}